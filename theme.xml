<theme>
<formatVersion>7</formatVersion>

<!--------------------------------------------------------------------------------------------------------------------------------->

<include>./_theme_settings.xml</include>
<include>./_assets/xml/lang.xml</include>

<!--------------------------------------------------------------------------------------------------------------------------------->

<subset name="mode" displayName="${lang.mode}">
<include name="default" displayName="${lang.default}"/>
<include name="custom" displayName="${lang.custom}"/>
<include name="customAudio" displayName="${lang.customAudio}"/>
<include name="customStatic" displayName="${lang.customStatic}"/>
<include name="customStaticAudio" displayName="${lang.customStaticAudio}"/>
</subset>

<subset name="customScreen" displayName="${lang.customScreen}">
<include name="default" displayName="${lang.default}"/>
<include name="carouselOnly" displayName="${lang.carouselOnly}"/>
<include name="videoOnly" displayName="${lang.videoOnly}"/>
