<include name="justYear" displayName="${lang.justYear}"/>
<include name="notDisplay" displayName="${lang.notDisplay}"/>
</subset>

<subset name="customMusic" displayName="${lang.customMusic}">
<include name="no" displayName="${lang.no}"/>
<include name="yes" displayName="${lang.yes}"/>
</subset>

<subset name="md_video" displayName="${lang.md_video}" appliesTo="basic,detailed,video,grid">
<include name="original" displayName="${lang.original}"/>
<include name="full" displayName="${lang.full}"/>
</subset>

<subset name="cutAudioVideos" displayName="${lang.cutAudioVideos}" appliesTo="basic,detailed,video,grid">
<include name="no" displayName="${lang.no}"/>
<include name="yes" displayName="${lang.yes}"/>
</subset>

<subset name="frame" displayName="${lang.frame}" appliesTo="basic,detailed,video,grid">
<include name="vertical" displayName="${lang.vertical}"/>
<include name="horizontal" displayName="${lang.horizontal}"/>
</subset>

<!--------------------------------------------------------------------------------------------------------------------------------->

<include>./_assets/xml/screen.xml</include>
<include>./_assets/xml/menu.xml</include>
<include>./_assets/xml/help.xml</include>
<include>./_assets/xml/system.xml</include>
<include>./_assets/xml/systemText.xml</include>
<include>./_assets/xml/basic.xml</include>
<include>./_assets/xml/detailed.xml</include>
<include>./_assets/xml/video.xml</include>
<include>./_assets/xml/grid.xml</include>
<include>./_assets/specifics/${system.theme}.xml</include>

<!--------------------------------------------------------------------------------------------------------------------------------->

</theme>
