</subset>

<subset name="colorset" displayName="${lang.colorset}">
<include name="blue" displayName="${lang.blue}">./_assets/xml/colorset/blue.xml</include>
<include name="ocean" displayName="${lang.ocean}">./_assets/xml/colorset/ocean.xml</include>
<include name="pink" displayName="${lang.pink}">./_assets/xml/colorset/pink.xml</include>
<include name="yellow" displayName="${lang.yellow}">./_assets/xml/colorset/yellow.xml</include>
<include name="green" displayName="${lang.green}">./_assets/xml/colorset/green.xml</include>
<include name="orange" displayName="${lang.orange}">./_assets/xml/colorset/orange.xml</include>
<include name="purple" displayName="${lang.purple}">./_assets/xml/colorset/purple.xml</include>
<include name="grey" displayName="${lang.grey}">./_assets/xml/colorset/grey.xml</include>
<include name="darkGrey" displayName="${lang.darkGrey}">./_assets/xml/colorset/darkGrey.xml</include>
<include name="pistacchio" displayName="${lang.pistacchio}">./_assets/xml/colorset/pistacchio.xml</include>
<include name="customColorset" displayName="${lang.customColorset}"/>
</subset>

<subset name="background" displayName="${lang.background}">
<include name="futuristic 01">./_assets/xml/background/f01.xml</include>
<include name="futuristic 02">./_assets/xml/background/f02.xml</include>
<include name="futuristic 03">./_assets/xml/background/f03.xml</include>
<include name="futuristic 04">./_assets/xml/background/f04.xml</include>
<include name="futuristic 05">./_assets/xml/background/f05.xml</include>
<include name="retrowave 01">./_assets/xml/background/r01.xml</include>
