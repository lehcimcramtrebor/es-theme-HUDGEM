<include name="retrowave 03">./_assets/xml/background/r03.xml</include>
<include name="retrowave 04">./_assets/xml/background/r04.xml</include>
<include name="retrowave 05">./_assets/xml/background/r05.xml</include>
<include name="retrowave 06">./_assets/xml/background/r06.xml</include>
<include name="retrowave 07">./_assets/xml/background/r07.xml</include>
<include name="retrowave 08">./_assets/xml/background/r08.xml</include>
<include name="retrowave 09">./_assets/xml/background/r09.xml</include>
<include name="flat">./_assets/xml/background/flat.xml</include>
</subset>

<subset name="biChrome" displayName="${lang.biChrome}">
<include name="no" displayName="${lang.no}"/>
<include name="yes" displayName="${lang.yes}"/>
</subset>

<subset name="staticEffect" displayName="${lang.staticEffect}">
<include name="no" displayName="${lang.no}"/>
<include name="scanlines" displayName="${lang.scanlines}"/>
<include name="scanlinesFine" displayName="${lang.scanlinesFine}"/>
<include name="scanlinesVertical" displayName="${lang.scanlinesVertical}"/>
<include name="scanlinesVerticalFine" displayName="${lang.scanlinesVerticalFine}"/>
<include name="crt" displayName="${lang.crt}"/>
<include name="phosphore" displayName="${lang.phosphore}"/>
<include name="phosphorePlus" displayName="${lang.phosphorePlus}"/>
</subset>

<subset name="helpIcons" displayName="${lang.helpIcons}">
<include name="defaultIcons" displayName="${lang.defaultIcons}"/>
